{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2021"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2021"
  },
  "exclude":[
    "node_modules",
    ".service.tmpl"
  ]
}
  